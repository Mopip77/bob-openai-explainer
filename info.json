{
    "identifier": "bob.openai.explainer",
    "version": "0.3.0",
    "category": "translate",
    "name": "ChatGPT解释",
    "summary": "",
    "icon": "",
    "author": "Mopip77",
    "homepage": "https://github.com/Mopip77/bob-openai-explainer",
    "appcast": "https://github.com/Mopip77/bob-openai-explainer/raw/master/appcast.json",
    "minBobVersion": "1.8.0",
    "options": [
        {
            "identifier": "endpoint",
            "type": "text",
            "title": "endpoint",
            "defaultValue": "https://api.openai.com/v1",
            "textConfig": {
                "type": "visible"
            }
        },
        {
            "identifier": "openaiApiKey",
            "type": "text",
            "title": "OpenAI API Key"
        },
        {
            "identifier": "prompt",
            "type": "text",
            "title": "Prompt",
            "defaultValue": "简明扼要地解释",
            "textConfig": {
                "type": "visible"
            }
        },
        {
            "identifier": "model",
            "type": "menu",
            "defaultValue": "gpt-3.5-turbo",
            "title": "Model",
            "menuValues": [
                {
                    "title": "gpt-4o-mini",
                    "value": "gpt-4o-mini"
                },
                {
                    "title": "gpt-4o",
                    "value": "gpt-4o"
                }
            ]
        },
        {
            "identifier": "specificModel",
            "type": "text",
            "title": "指定模型",
            "textConfig": {
                "type": "visible",
                "placeholderText": "留空则使用Model配置的模型"
            }
        },
        {
            "identifier": "showExtraInfo",
            "type": "menu",
            "defaultValue": "false",
            "title": "展示调用额外信息(模型, token消耗)",
            "menuValues": [
                {
                    "title": "展示",
                    "value": "true"
                },
                {
                    "title": "不展示",
                    "value": "false"
                }
            ]
        }
    ]
}
